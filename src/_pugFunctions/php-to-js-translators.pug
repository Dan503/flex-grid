	//these functions make it easier to convert the php code into javascript

	function is_string(string){ return typeof string === 'string'; }

	function is_int(int){ return typeof int === 'number'; }

	function is_numeric(n){ return !isNaN(parseFloat(n)) && isFinite(n);  }

	function is_array(array){ return Array.isArray(array); }

	function is_obj(obj){ return typeof obj === 'object' && !Array.isArray(obj); }

	function in_array(value, array){ return array.indexOf(value) >= 0; }

	function isset(variable){ return typeof variable !== 'undefined'; }

	function end(array){ return array[array.length - 1]; }
